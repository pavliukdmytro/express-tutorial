<%- include ('../layout/header.ejs') %>
<div class="main">
    <div class="container">
        <div class="content">
            <% for(var i = 0; i < posts.length; i++) { %>
                <div class="post">
                    <div class="top">
                        <h2><a href="/posts/<%= posts[i].url %>"><%= posts[i].title %></a></h2>
                    </div>
                    <div class="body">
                        <%= posts[i].body %>
                    </div>
                    <div class="bottom">
                        <div class="autor"></div>
                        <a href="/">
                            Коментарии
                        </a>
                    </div>
                </div>
            <% } %>
            <div class="pagination">
                <% if(pages > 0 && current > 2) { %>
                    <a href="/users/<%= _user.login %>/<%= Number(current) - 1 %>" class="old">← old page</a>
                <% } %>
                <% if(current == 2) { %>
                    <a href="/users/<%= _user.login %>/" class="old">go to first</a>

                <% } %>
                <% if(pages > 0 && current < pages) { %>
                    <a href="/users/<%= _user.login %>/<%= Number(current) + 1 %>" class="new">new page →</a>
                <% } %>
            </div>
        </div>
        <%- include('../layout/sidebar.ejs') %>
    </div>
</div>
<%- include ('../layout/footer.ejs') %>


