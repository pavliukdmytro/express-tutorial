<%- include ('../layout/header.ejs') %>
<div class="main">
    <div class="container">
        <div class="content">
            <div class="post">
                <div class="top">
                    <h2><%= post.title %></h2>
                </div>
                <div class="body">
                    <%= post.body %>
                </div>
                <div class="bottom">
                    <div class="autor">
                        Автор: <a href="/">Гедеван</a>
                    </div>
                    <a href="/">
                        Коментарии
                    </a>
                </div>
            </div>
            <div class="comments" id="<%= post.id %>">
                <h3>Комментарии</h3>
                <div class="comment-list">
                    <%- include('../layout/comments.ejs', {items: comments}) %>
                    <span class="link" id="new">write comment</span>
                    <form class="comment">
                        <textarea name="body"></textarea>
                        <div class="buttons">
                            <button class="cancel secondary">Cancel</button>
                            <button class="send">Send</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <%- include('../layout/sidebar.ejs') %>
    </div>
</div>
<%- include ('../layout/footer.ejs') %>


