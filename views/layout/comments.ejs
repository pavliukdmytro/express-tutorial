<% if(items.length) { %>
    <ul>
        <% items.forEach(function(item) {  %>
            <li id="<%= item.id %>">
                <div class="head">
                    <a href="/users/<%= item.owner.login %>">
                        <%= item.owner.login %>
                    </a>
                    <span class="date">
                        <%= moment(item.createAd).fromNow() %>
                    </span>
                </div>
                <%= item.body%>
                <span class="link" id="replay">ответить</span>
                <%- include('./comments.ejs', {items: item.children})  %>
            </li>
        <% }) %>
    </ul>
<% } %>
